{
  "name": "mianshihou",
  "private": true,
  "packageManager": "bun@1.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/bcryptjs": "^3.0.0",
    "autoprefixer": "^10.4.24",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "turbo": "^2.7.6",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@tanstack/react-form": "^1.28.0",
    "@tanstack/react-query": "^5.90.20",
    "@trpc/client": "^11.9.0",
    "@trpc/react-query": "^11.9.0",
    "@types/node": "^25.0.10",
    "tsx": "^4.21.0"
  },
  "lint-staged": {
    "apps/api/**/*.{ts,tsx}": [
      "bun --cwd apps/api lint:fix",
      "prettier --write"
    ],
    "apps/web/**/*.{ts,tsx}": [
      "bun --cwd apps/web lint",
      "prettier --write"
    ],
    "packages/ui/**/*.{ts,tsx}": [
      "prettier --write"
    ],
    "**/*.{json,md}": [
      "prettier --write"
    ]
  }
}
